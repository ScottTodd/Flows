doctype 5
html

  head

    //- Site Metadata
    title Flows
    style(type="text/css") html, div, body, canvas { margin: 0em; padding: 0em; }

  body

    //- Required Libraries
    script(src="//coffeescript.org/extras/coffee-script.js")
    script(src="build/threejs/build/three.min.js")

    //- Local Dependencies
    each file in ['flowSource', 'flowSink', 'pusher', 'splitter', 'wall', 'levels', 'scene', 'render']
      script(type="text/coffeescript" src="scripts/"+file+".coffee")
